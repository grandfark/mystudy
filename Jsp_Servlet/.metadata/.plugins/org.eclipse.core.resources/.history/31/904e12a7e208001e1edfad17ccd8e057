/* index.js*/
var id = document.getElementsByName("id");
var pwd = document.getElementByName("pwd");

function login_check() {
	let ff = document.ff;
	if (ff.id.value == "") {
		alert("id가 입력되지 않았습니다.");
		id.focus();
		return false;
	} else if (ff.pwd.value =="") {
		alert("암호가 입력되지 않았습니다.");
		pwd.focus();
		return false;
	}
}